{
  "name": "@wbe/interpol-root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/willybrauner/interpol.git"
  },
  "keywords": [
    "interpol",
    "interpolation",
    "animation",
    "timeline",
    "dom"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "turbo run build",
    "build:watch": "turbo run build -- --watch",
    "dev": "turbo run dev",
    "test:watch": "vitest --reporter verbose",
    "test": "vitest run",
    "size": "size-limit",
    "pre-publish": "npm run build && npm run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/node": "^20.1.0",
    "prettier": "^2.8.8",
    "size-limit": "^8.2.4",
    "turbo": "^1.9.9",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "size-limit": [
    {
      "name": "@wbe/interpol",
      "path": "packages/interpol/dist/interpol.js",
      "limit": "4 KB"
    }
  ]
}
